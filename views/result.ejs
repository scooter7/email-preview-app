<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Email Preview Results</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="container">
        <h1>Email Preview Results</h1>
        <div class="screenshots">
            <% results.forEach(result => { %>
                <div class="screenshot-item">
                    <h3><%= result.name.replace(/_/g, ' ') %></h3>
                    <% if (result.filename) { %>
                        <img src="/screenshots/<%= result.filename %>" alt="Screenshot for <%= result.name %>">
                    <% } else { %>
                        <p class="error-message">Error: <%= result.error %></p>
                    <% } %>
                </div>
            <% }); %>
        </div>
        <a href="/" class="back-link">Test Another Email</a>
    </div>
</body>
</html>